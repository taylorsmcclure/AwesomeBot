<script>
function loadBackground() {
    document.getElementById("header").style.backgroundImage = "url('/img/header-bg-" + (Math.floor(Math.random() * (53)) + 1) + ".jpg')";
}

function loadFrameContent(url, callback) {
	$.ajax({
		url: url,
		type: "GET",
		success: function(data){
			$("#frame").html(data);
			if(callback) {
				callback();
			}
		},
		error: function(err) {
			if(callback) {
				callback(err);
			} else {
				window.location.replace("/error");
			}
		}
	});
}

function setUserAutocomplete(svrid) {
	$.getJSON("/userlist" + (svrid ? ("?svrid=" + svrid) : ""), function(data) {
		new autoComplete({
		    selector: ".user-autocomplete",
		    minChars: 2,
		    source: function(query, res) {
		    	query = query.toLowerCase();
		       	res(data.filter(function(a) {
		       		return a.toLowerCase().indexOf(query)>-1;
		       	}));
		    }
		});
	});		
}
</script>